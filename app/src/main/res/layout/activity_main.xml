<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="414dp"
        android:layout_height="78dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/customsearch"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:text="Saigon"
            android:textColor="#f0f0f0f0" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/buttonsearch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/searching" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="40dp"
        android:layout_height="83dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/locationpin" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/flag" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat3"
        android:layout_width="375dp"
        android:layout_height="81dp"
        android:orientation="vertical"
        android:paddingTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat">


        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Tp Ho Chi Minh"
            android:textColor="#ffffffff" />


        <TextView
            android:id="@+id/textcountry"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="Viet Nam"
            android:textColor="#ffffffff" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat4"
        android:layout_width="411dp"
        android:layout_height="258dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat3">

        <ImageView
            android:id="@+id/imagestatus"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginLeft="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nhietdo"
            android:layout_width="128dp"
            android:layout_height="56dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Nhiet Do"
            android:textColor="#FFFFFC"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/trangthai"
            android:layout_width="125dp"
            android:layout_height="55dp"
            android:layout_marginLeft="150dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="Trang thai"
            android:textColor="#FFFFFC"
            android:textSize="20dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat5"
        android:layout_width="408dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat4">


        <ImageView
            android:id="@+id/imagehumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/humidity" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/cloud">

        </com.airbnb.lottie.LottieAnimationView>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/millanimation">

        </com.airbnb.lottie.LottieAnimationView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat6"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat5">


        <TextView
            android:id="@+id/texthumidity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="58 "
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textcloud"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="58 "
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textmilland"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="55dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="1dp"
            android:paddingTop="15dp"
            android:text="58 "
            android:textColor="#ffffff"
            android:textSize="25dp"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="55dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat6">


        <TextView
            android:id="@+id/textpresent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif-black"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:text="Thu 4 / ngay 25/ thang 6/ 10:00"
            android:textColor="#80FFFFFF"
            android:textSize="15dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/buttonskip"
        android:layout_width="179dp"
        android:layout_height="54dp"
        android:background="@drawable/buttonskip"
        android:text="Các ngày tiếp theo "
        android:textSize="15dp"
        android:textColor="#ffff"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat7" />


</androidx.constraintlayout.widget.ConstraintLayout>